%h1.section Criar usu√°rio
= form_for(@user, url: user_registration_path) do |f|
  = f.hidden_field :account_id, value: params[:id]
  %div
    = f.label :name
    %br/
    = f.text_field :name
  %div
    = f.label :email
    %br/
    = f.email_field :email
  %div
    = f.label :password
    %br/
    = f.password_field :password
  %div
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %div= f.submit "Salvar"
