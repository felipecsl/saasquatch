= form_for(@user, :url => account_user_path, :html => { :method => :put }) do |f|
  %div
    = f.label :name
    %br/
    = f.text_field :name
  %div
    = f.label :email
    %br/
    = f.email_field :email
  %div
    = f.label :password
    %i (leave blank if you don't want to change it)
    %br/
    = f.password_field :password
  %div
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %div
    = f.label :current_password
    %i (we need your current password to confirm your changes)
    %br/
    = f.password_field :current_password
  %div= f.submit "Salvar"
%h3 Cancel my account
%p
  Unhappy? #{link_to "Cancel my account", account_user_path(@user.account.id, @user.id), :confirm => "Are you sure?", :method => :delete}.
= link_to "Back", :back
